<script>
  $().ready(function() {
    autoNavs($('.issue-body'), '.toc');
    $('.progress-bar').tooltip();
  });
</script>
<div class="container page-issue">
  <div class="row">
    <div class="toc">
      <ul class="">
        <!-- Generated by auto nav generator -->
      </ul>
    </div>
    <div class="issue-body">
      <%= yield %>
    </div>

    <div class="voting">
      <h2>Vote on this Issue</h2>
      <div class="vote-box">
        <div class="vote-controls">
          <div class="up">âˆš</div>
          <div class="down">X</div>
        </div>
        <div class="results-summary">
          <div class="headline">0% of users support this</div>
          <div class="breakdown"><span class="num-total yays">0</span> in favor / <span class="num-total nays">4</span> opposed</div>
        </div>
      </div>

      <h3>Statistics</h3>

      <div class="stats">
        <small>Voting for</small>
        <div class="progress">
          <div class="progress-bar progress-bar-success" style="width: 35%">
            <span class="sr-only">35% Complete (success)</span>
          </div>
          <div class="progress-bar progress-bar-warning progress-bar-striped" style="width: 20%">
            <span class="sr-only">20% Complete (warning)</span>
          </div>
          <div class="progress-bar progress-bar-danger" style="width: 10%">
            <span class="sr-only">10% Complete (danger)</span>
          </div>
        </div>

        <small>Voting against</small>
        <div class="progress">
          <div class="progress-bar progress-bar-success" style="width: 35%" title="Green Party">
            <span class="sr-only">35% Complete (success)</span>
          </div>
          <div class="progress-bar progress-bar-warning progress-bar-striped" style="width: 20%">
            <span class="sr-only">20% Complete (warning)</span>
          </div>
          <div class="progress-bar progress-bar-danger" style="width: 10%">
            <span class="sr-only">10% Complete (danger)</span>
          </div>
        </div>

      </div>

    </div>


  </div>
</div>