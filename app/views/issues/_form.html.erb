<%= form_for [@town, @issue] do |f| %>
  <%= render ({
    :partial => 'global/save_errors',
    :locals => {:object => @town}}) %>
    <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
    <small>Markdown</small>
  </p>

  <p>
    <%= f.label :town %><br>
    <%= f.select :town, options_for_select(Town.all.map{|s|[s.name, s.id]}, @town.id) %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>